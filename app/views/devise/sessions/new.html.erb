

<html>
<head>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
</head>
<body>

<section class="vh-600" >
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="border" style="  border-radius: 1rem;">
          <div class=" p-5 text-center"> 
          
            <h3 class="mb-5 muxan">Log in</h3>
                
              <div >
                <div class="form-outline mb-4">
                  <%= f.label :email, class: "muxan"  %>
                 <%= f.email_field :email, class: "form-control form-control-lg" %>
                </div>

                <div class="field">
                  <%= f.label :password, class: "muxan" %><br />
                  <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-lg" %>
                </div>

                <% if devise_mapping.rememberable? %>
                  <div class="field">
                    <%= f.check_box :remember_me %>
                    <%= f.label :remember_me, class: "muxan" %>
                  </div>
                <% end %>

                <div class="actions", >
                  <%= f.submit "Log in", data: {turbo: false}, class: "btn btn-primary btn-lg btn-block" %>
                </div>
                </div>
                <hr class="my-4">
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

</body>

 <% end %>
 

</html>

<style>
body{
  background-color: #1f2029;
}
.muxan{
  color: #fff;
}

</style>